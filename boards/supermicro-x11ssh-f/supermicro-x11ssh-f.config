# Configuration for a Supermicro X11SSH-T / -TF server
# It has an AST2400 BMC for vga output; the built in i915 is not accessible
export CONFIG_COREBOOT=y
export CONFIG_COREBOOT_VERSION=git
CONFIG_COREBOOT_CONFIG=config/coreboot-supermicro-x11ssh-f.config
CONFIG_LINUX_CONFIG=config/hvault-common.config
export CONFIG_LINUX_VERSION=5.4.68

CONFIG_CRYPTSETUP=y
CONFIG_FLASHROM=y
CONFIG_FLASHTOOLS=y
CONFIG_GPG2=y
CONFIG_KEXEC=y
CONFIG_UTIL_LINUX=y
CONFIG_LVM2=y
CONFIG_MBEDTLS=y
CONFIG_PCIUTILS=y
CONFIG_POPT=y
CONFIG_QRENCODE=y
CONFIG_TPMTOTP=y
CONFIG_DROPBEAR=y
CONFIG_MSRTOOLS=y
export CONFIG_IO386=y
export CONFIG_USB_KEYBOARD=y

#CONFIG_CAIRO=y
#CONFIG_FBWHIPTAIL=y

# Serial console only, no graphics

CONFIG_LINUX_USB=y
CONFIG_LINUX_IGB=y

CONFIG_LINUX_SCSI_GDTH=y
CONFIG_LINUX_ATA=y
CONFIG_LINUX_AHCI=y
CONFIG_LINUX_NVME=y
CONFIG_LINUX_MEI=y


export CONFIG_TPM=y
export CONFIG_BOOTSCRIPT=/bin/autoboot-init
export CONFIG_BOOT_REQ_HASH=n
export CONFIG_BOOT_REQ_ROLLBACK=n
export CONFIG_BOOT_KERNEL_ADD="intel_iommu=on"
export CONFIG_BOOT_KERNEL_REMOVE="quiet"
export CONFIG_BOOT_DEV="LABEL=boot"
export CONFIG_USB_BOOT_DEV="/dev/sdb1"
#export CONFIG_BOOT_GUI_MENU_NAME="Supermicro x11ssh-tf Heads Boot Menu"
#export CONFIG_WARNING_BG_COLOR="--background-gradient 0 0 0 150 125 0"
#export CONFIG_ERROR_BG_COLOR="--background-gradient 0 0 0 150 0 0"
